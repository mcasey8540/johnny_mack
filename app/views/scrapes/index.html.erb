<div class="container">
	<div class="row">
		<div class="col-xs-4 col-md-4">
			<a class="btn btn-primary" href="/scrapes/new">New Scrape</a>
		</div>
		<div class="col-xs-8 col-md-8">
			<div class="btn-group">
				  <button class="btn">Filter By Month</button>
				  	<button class="btn dropdown-toggle" data-toggle="dropdown">
				    	<span class="caret"></span>
				  	</button>
				  		<ul class="dropdown-menu">
				  			<%= link_to "All Months" %></br>
				    		<%= link_to "December", {:start_date => '2012-12-01', :end_date => '2012-12-31'} %> </br>
				    		<%= link_to "January", {:start_date => '2013-01-01', :end_date => '2013-01-31'} %>
				  		</ul>
			</div>
			<div class="btn-group">
				  <button class="btn">Filter By Team</button>
				  	<button class="btn dropdown-toggle" data-toggle="dropdown">
				    	<span class="caret"></span>
				  	</button>
				  		<ul class="dropdown-menu">
				  			<% @home_teams.each do |t| %>
				    		<%= link_to "#{t}", games_path({:team => "#{t}"}) %> </br>
				    		<% end %>
				  		</ul>
			</div>		
			<div class="dropdown">
			  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
			    <i class="fa fa-file-excel-o"></i>&nbspExport
			    <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
			    <li role="presentation"><%= link_to "CSV", scrapes_path(format: "csv") %></li>
			    <li role="presentation"><%= link_to "Excel", scrapes_path(format: "xls") %></li>
			  </ul>
			</div>		
		</div>	
	</div>
	<br>
	<div class="row">
		<table class="table table-striped" >
				<tr>
					<th>Scrape Date</th>
					<th>Options</th>
				<tr>
				<tbody>		
					<% @scrapes.each do |t| %>
						<tr>
							<td><%= link_to t.created_at.to_date, scrape_path(t.id) %></td>
							<td><%= button_to "Delete", delete_scrape_path(t.id), :confirm => "Sure you want to delete this scrape?", :method => :delete, class: "btn btn-danger" %></td>
						<tr>	
					<% end %>
				</tbody>		
		</table>
	</div>
</div>		


